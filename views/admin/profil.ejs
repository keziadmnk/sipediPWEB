<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>Profil Admin</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      ::-webkit-scrollbar {
        width: 6px;
      }
      ::-webkit-scrollbar-thumb {
        background-color: #2f855a;
        border-radius: 3px;
      }
    </style>
  </head>
  <body class="bg-[#f5fef7] min-h-screen flex flex-col">
    <div class="flex flex-1">
      <%- include('../partials/asideAdmin') %>

      <div class="flex-1 flex flex-col ml-56 ">
        <%- include('../partials/navAdmin') %>

        <main class="py-16 px-10">
          <h2 class="text-[#276749] font-semibold text-2xl mb-6">
            Profil Admin
          </h2>
          <section
            class="bg-white rounded-lg shadow-md p-8 max-w-4xl flex flex-col md:flex-row gap-8"
          >
            <div
              class="flex justify-center items-center md:justify-center md:flex-1"
            >
              <div
                class="rounded-full border-2 border-[#276749] p-1 w-50 h-50 flex items-center justify-center"
              >
                <img
                  alt="foto admin"
                  class="rounded-full w-42 h-42 object-cover"
                  height="160"
                  src="/images/profilpetugas.jpg"
                  width="160"
                />
              </div>
            </div>
            <form class="flex-1 flex flex-col gap-4 max-w-md">
              <div>
                <label class="block text-xs font-semibold mb-1" for="namaLengkap">
                  Nama Lengkap
                </label>
                <input
                  class="w-full rounded border border-[#276749] bg-[#eaf7f0] px-3 py-2 text-xs text-[#276749]"
                  id="namaLengkap"
                  readonly=""
                  type="text"
                  value="<%= admin.nama_lengkap %>"
                />
              </div>
              <div>
                <label
                  class="block text-xs font-semibold mb-1"
                  for="nomorIndukPegawai"
                >
                  ID Admin
                </label>
                <input
                  class="w-full rounded border border-[#276749] bg-[#eaf7f0] px-3 py-2 text-xs text-[#276749]"
                  id="nomorIndukPegawai"
                  readonly=""
                  type="text"
                  value="<%= admin.id_pengguna %>"
                />
              </div>
              <div>
                <label class="block text-xs font-semibold mb-1" for="email">
                  Email
                </label>
                <input
                  class="w-full rounded border border-[#276749] bg-[#eaf7f0] px-3 py-2 text-xs text-[#276749]"
                  id="email"
                  readonly=""
                  type="text"
                  value="<%= admin.email %>"
                />
              </div>
              <div>
                <label class="block text-xs font-semibold mb-1" for="nomorHP">
                  Nomor HP
                </label>
                <input
                  class="w-full rounded border border-[#276749] bg-[#eaf7f0] px-3 py-2 text-xs text-[#276749]"
                  id="nomorHP"
                  readonly=""
                  type="text"
                  value="<%= admin.nomor_hp || '-' %>"
                />
              </div>
              <div>
                <label class="block text-xs font-semibold mb-1" for="alamat">
                  Alamat
                </label>
                <input
                  class="w-full rounded border border-[#276749] bg-[#eaf7f0] px-3 py-2 text-xs text-[#276749]"
                  id="alamat"
                  readonly=""
                  type="text"
                  value="<%= admin.alamat || '-' %>"
                />
              </div>
            </form>
          </section>
        </main>
      </div>
    </div>
  </body>
</html> 