<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SIPEDI - Edit Buku</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
  <style>
      /* Custom background color with 33% opacity */
      .bg-custom {
        background-color: #E9F1ED;
      }
  </style>
  
</head>
<body class="bg-green-50 flex ml-56">

  <!-- Sidebar -->
  <%- include('../partials/asideAdmin') %>

  <!-- Content -->
  <div class="flex-1 p-12">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-semibold">Edit Buku</h1>
    </div>

    <!-- Form Edit Buku -->
    <div class="bg-white shadow-md rounded-lg p-10">
       <!-- Form Tambah Buku -->
      <div class="bg-white shadow-md rounded-lg p-10">
        <form
          action="/admin/editbuku/<%= databuku.nomor_isbn %>"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="grid grid-cols-2 gap-x-10 gap-y-6">
            <!-- Baris 1 -->
            <div class="col-span-2">
              <label
                for="judul_buku"
                class="block text-sm font-medium text-gray-700"
                >Judul Buku *</label
              >
              <input
                type="text"
                id="judul_buku"
                name="judul_buku"
                required
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
                value="<%= databuku.judul_buku %>"
              />
            </div>

            <!-- Baris 2 -->
            <div class="col-span-2">
              <label class="block text-sm font-medium text-gray-700"
                >Jenis Buku</label
              >
              <div class="mt-1 flex items-center space-x-6">
                <% semuaJenis.forEach(function(jenis) { %>
                  <input
                    type="checkbox"
                    id="jenis_<%= jenis.nama_jenis.replace(/\s/g, '_') %>"
                    name="jenis_buku[]"
                    value="<%= jenis.nama_jenis %>"
                    class="mr-2"
                    <%= databuku.jenis && databuku.jenis.some(j => j.nama_jenis === jenis.nama_jenis) ? 'checked' : '' %>
                  />
                  <label for="jenis_<%= jenis.nama_jenis.replace(/\s/g, '_') %>" class="mr-6"><%= jenis.nama_jenis %></label>
                <% }); %>
              </div>
            </div>

            <!-- Baris 3 -->
            <div>
              <label
                for="kategori"
                class="block text-sm font-medium text-gray-700"
                >Kategori</label
              >
              <select
                id="kategori"
                name="kategori"
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
              >
                <option value="">Pilih kategori</option>
                <% kategori.forEach(function(item) { %>
                  <option value="<%= item.id_kategori %>" <%= databuku.kategori && databuku.kategori.id_kategori === item.id_kategori ? 'selected' : '' %>><%= item.nama_kategori %></option>
                <% }); %>
              </select>
            </div>
            <div>
              <label for="isbn" class="block text-sm font-medium text-gray-700"
                >ISBN *</label
              >
              <input
                type="text"
                id="isbn"
                name="isbn"
                required
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
                value="<%= databuku.nomor_isbn %>"
              />
            </div>

            <!-- Baris 4 -->
            <div>
              <label
                for="pengarang"
                class="block text-sm font-medium text-gray-700"
                >Pengarang *</label
              >
              <input
                type="text"
                id="pengarang"
                name="pengarang"
                required
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
                value="<%= databuku.pengarang %>"
              />
            </div>
            <div>
              <label
                for="tahun_terbit"
                class="block text-sm font-medium text-gray-700"
                >Tahun Terbit *</label
              >
              <select
                name="tahun_terbit"
                id="tahun_terbit"
                required
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
              >
                <option value="">Pilih tahun</option>
                <% const currentYear = new Date().getFullYear(); for (let year =
                currentYear; year >= 1950; year--) { %>
                <option value="<%= year %>" <%= databuku.tahun_terbit == year ? 'selected' : '' %>><%= year %></option>
                <% } %>
              </select>
            </div>

            <!-- Baris 5 -->
            <div>
              <label
                for="penerbit"
                class="block text-sm font-medium text-gray-700"
                >Penerbit *</label
              >
              <input
                type="text"
                id="penerbit"
                name="penerbit"
                required
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
                value="<%= databuku.penerbit %>"
              />
            </div>
            <div>
              <label
                for="jumlah_halaman"
                class="block text-sm font-medium text-gray-700"
                >Jumlah Halaman *</label
              >
              <input
                type="number"
                id="jumlah_halaman"
                name="jumlah_halaman"
                min="1"
                required
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
                value="<%= databuku.jumlah_halaman %>"
              />
            </div>

            <!-- Baris 6 -->
            <div>
              <label
                for="lokasi_penyimpanan"
                class="block text-sm font-medium text-gray-700"
                >Lokasi Penyimpanan</label
              >
              <select
                id="lokasi_penyimpanan"
                name="lokasi_penyimpanan"
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
              >
                <option value="">Pilih lokasi</option>
                <option value="American Corner – Sayap Kanan Lt.2" <%= databuku.lokasi_penyimpanan === 'American Corner – Sayap Kanan Lt.2' ? 'selected' : '' %>>American Corner – Sayap Kanan Lt.2</option>
                <option value="Minangkabau Corner Lt. 3" <%= databuku.lokasi_penyimpanan === 'Minangkabau Corner Lt. 3' ? 'selected' : '' %>>Minangkabau Corner Lt. 3</option>
                <option value="Ruang Lokal Konten – Skripsi" <%= databuku.lokasi_penyimpanan === 'Ruang Lokal Konten – Skripsi' ? 'selected' : '' %>>Ruang Lokal Konten – Skripsi</option>
                <option value="Ruang Referensi – Sayap Kiri Lantai 2" <%= databuku.lokasi_penyimpanan === 'Ruang Referensi – Sayap Kiri Lantai 2' ? 'selected' : '' %>>Ruang Referensi – Sayap Kiri Lantai 2</option>
                <option value="Ruang Sirkulasi 2 – Sayap Kanan Lantai 1" <%= databuku.lokasi_penyimpanan === 'Ruang Sirkulasi 2 – Sayap Kanan Lantai 1' ? 'selected' : '' %>>Ruang Sirkulasi 2 – Sayap Kanan Lantai 1</option>
                <option value="Ruang Sirkulasi Utama – Sayap Kiri Lantai 1" <%= databuku.lokasi_penyimpanan === 'Ruang Sirkulasi Utama – Sayap Kiri Lantai 1' ? 'selected' : '' %>>Ruang Sirkulasi Utama – Sayap Kiri Lantai 1</option>
              </select>
            </div>
            <div>
              <label
                for="jumlah_stok"
                class="block text-sm font-medium text-gray-700"
                >Jumlah Stok </label
              >
              <input
                type="number"
                id="jumlah_stok"
                name="jumlah_stok"
                min="1"
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
                value="<%= databuku.jumlah_stok %>"
              />
            </div>

            <!-- Baris 7 -->
            <div>
              <label
                for="deskripsi"
                class="block text-sm font-medium text-gray-700"
                >Deskripsi</label
              >
              <textarea
                id="deskripsi"
                rows="5"
                name="deskripsi"
                class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
              ><%= databuku.deskripsi || '' %></textarea>
            </div>
            <div class="flex flex-col gap-4">
              <div>
                <label
                  for="upload_pdf"
                  class="block text-sm font-medium text-gray-700"
                  >Upload PDF</label
                >
                <input
                  type="file"
                  id="upload_pdf"
                  name="upload_pdf"
                  accept=".pdf"
                  class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
                />
                <% if (databuku.upload_pdf) { %>
                  <div class="text-xs text-gray-500 mt-1">File saat ini: <%= databuku.upload_pdf %></div>
                <% } %>
                <small class="text-gray-500">Format: PDF, Max: 10MB</small>
              </div>
              <div>
                <label
                  for="upload_sampul"
                  class="block text-sm font-medium text-gray-700"
                  >Upload Sampul</label
                >
                <input
                  type="file"
                  id="upload_sampul"
                  name="upload_sampul"
                  accept="image/*"
                  class="mt-1 w-full p-2.5 rounded-md border border-gray-300 shadow-sm bg-custom"
                />
                <% if (databuku.upload_sampul) { %>
                  <div class="text-xs text-gray-500 mt-1">File saat ini: <%= databuku.upload_sampul %></div>
                <% } %>
                <small class="text-gray-500"
                  >Format: JPG, PNG, GIF, Max: 10MB</small
                >
              </div>
            </div>
          </div>

          <!-- Tombol -->
          <div class="flex justify-end gap-4 mt-6">
            <a
              href="/admin/databuku"
              class="bg-yellow-400 text-white py-2 px-4 rounded-md hover:bg-yellow-500"
              >Batal</a
            >
            <button
              type="submit"
              class="bg-[#276749] text-white py-2 px-4 rounded-md hover:bg-green-700"
            >
              Simpan
            </button>
          </div>
        </form>
    </div>
  </div>
  
</body>
</html>
