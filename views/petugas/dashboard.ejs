<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>SIPEDI</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[#f5fef7] min-h-screen flex">
    <%- include('../partials/asidePetugas') %>

    <main class="flex-1 flex flex-col">
      <%- include('../partials/navpetugas') %>

      <section class="p-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- card 1 -->
        <div class="bg-white shadow-md rounded-md p-6 flex items-center gap-4">
          <div
            class="w-12 h-12 rounded-full bg-[#b38aff] flex items-center justify-center"
          >
            <img
              alt="Purple circle with book and plus icon"
              class="w-6 h-6"
              height="24"
              src="https://storage.googleapis.com/a1aa/image/d2ae2ec4-7c2c-44ae-5240-19082be3863f.jpg"
              width="24"
            />
          </div>
          <div>
            <p class="text-xs text-[#2f6f4e] mb-1">Total Peminjaman</p>
            <p class="text-[#2f6f4e] font-semibold text-lg">
              <%= totalpeminjaman %>
            </p>
          </div>
        </div>
        <!-- Card 2 -->
        <div class="bg-white shadow-md rounded-md p-6 flex items-center gap-4">
          <div
            class="w-12 h-12 rounded-full bg-[#f0e86a] flex items-center justify-center"
          >
            <img
              alt="Yellow circle with book and clock icon"
              class="w-6 h-6"
              height="24"
              src="https://storage.googleapis.com/a1aa/image/62065b47-e103-4d81-3260-7299339ecf6b.jpg"
              width="24"
            />
          </div>
          <div>
            <p class="text-xs text-[#2f6f4e] mb-1">Total Sedang Dipinjam</p>
            <p class="text-[#2f6f4e] font-semibold text-lg">
              <%= totaldipinjam %>
            </p>
          </div>
        </div>
        <!-- Card 3 -->
        <div class="bg-white shadow-md rounded-md p-6 flex items-center gap-4">
          <div
            class="w-12 h-12 rounded-full bg-[#b9f0d9] flex items-center justify-center"
          >
            <img
              alt="Light green circle with book and checkmark icon"
              class="w-6 h-6"
              height="24"
              src="https://storage.googleapis.com/a1aa/image/cdc80fa1-b5e4-416f-ecff-f22226cca265.jpg"
              width="24"
            />
          </div>
          <div>
            <p class="text-xs text-[#2f6f4e] mb-1">Total Pengembalian</p>
            <p class="text-[#2f6f4e] font-semibold text-lg">
              <%= totaldikembalikan %>
            </p>
          </div>
        </div>
        <!-- Card 4 -->
        <div class="bg-white shadow-md rounded-md p-6 flex items-center gap-4">
          <div
            class="w-12 h-12 rounded-full bg-[#ff4c4c] flex items-center justify-center"
          >
            <img
              alt="Red circle with book and exclamation mark icon"
              class="w-6 h-6"
              height="24"
              src="https://storage.googleapis.com/a1aa/image/c5ab7be3-31e9-465d-32b4-37396760c3ee.jpg"
              width="24"
            />
          </div>
          <div>
            <p class="text-xs text-[#2f6f4e] mb-1">Total Terlambat</p>
            <p class="text-[#2f6f4e] font-semibold text-lg">
              <%= totalterlambat %>
            </p>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
