<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>Profil Pengguna</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&amp;display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>
  <body class="bg-[#f4f9f1] min-h-screen">

    <%- include('../partials/navbarMahasiswa') %>
    <main
      class="max-w-6xl mx-auto mt-40 p-6 bg-white rounded-md shadow-sm flex flex-col md:flex-row md:space-x-20"
    >
      <section class="flex flex-col md:w-1/3 justify-center items-center">
        <div class="flex justify-center w-full">
          <img
            alt="3D avatar of a woman with brown hair, glasses, and a purple sweater on a purple background"
            class="w-44 h-44 rounded-full border-2 border-[#2c5a33]"
            height="180"
            src="https://storage.googleapis.com/a1aa/image/c053e2fe-0b89-4871-f633-6f1a48e8d919.jpg"
            width="180"
            style=""
          />
        </div>
        <p
          class="text-[#2c5a33] font-semibold text-sm text-center break-words max-w-[180px] mt-4"
        >
          2311522010_kezia@student.unand.ac.id
        </p>
      </section>
      <section class="md:w-2/3">
        <h1 class="text-[#2c5a33] font-bold text-xl mb-6">Profil Pengguna</h1>
        <form class="space-y-4 max-w-md">
          <div>
            <label
              class="block text-[#2c5a33] font-semibold text-xs mb-1"
              for="nama"
            >
              Nama Lengkap
            </label>
            <input
              class="w-full rounded-md border border-[#2c5a33] bg-[#f4f9f1] text-[#2c5a33] text-xs px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#2c5a33]"
              id="nama"
              type="text"
              value="Kezia Valerina Damanik"
            />
          </div>
          <div>
            <label
              class="block text-[#2c5a33] font-semibold text-xs mb-1"
              for="nim"
            >
              Nomor Induk Mahasiswa
            </label>
            <input
              class="w-full rounded-md border border-[#2c5a33] bg-[#f4f9f1] text-[#2c5a33] text-xs px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#2c5a33]"
              id="nim"
              type="text"
              value="2311522010"
            />
          </div>
          <div>
            <label
              class="block text-[#2c5a33] font-semibold text-xs mb-1"
              for="email"
            >
              Email
            </label>
            <input
              class="w-full rounded-md border border-[#2c5a33] bg-[#f4f9f1] text-[#2c5a33] text-xs px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#2c5a33]"
              id="email"
              type="email"
              value="2311522010_kezia@student.unand.ac.id"
            />
          </div>
          <div>
            <label
              class="block text-[#2c5a33] font-semibold text-xs mb-1"
              for="hp"
            >
              Nomor HP
            </label>
            <input
              class="w-full rounded-md border border-[#2c5a33] bg-[#f4f9f1] text-[#2c5a33] text-xs px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#2c5a33]"
              id="hp"
              type="text"
              value="081234567890"
            />
          </div>
          <div>
            <label
              class="block text-[#2c5a33] font-semibold text-xs mb-1"
              for="alamat"
            >
              Alamat
            </label>
            <input
              class="w-full rounded-md border border-[#2c5a33] bg-[#f4f9f1] text-[#2c5a33] text-xs px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#2c5a33]"
              id="alamat"
              type="text"
              value="Perumahan Salingka Bungo Permai II"
            />
          </div>
          <div class="flex space-x-4 mt-6">
            <button
              class="bg-[#2c5a33] text-white text-xs font-semibold px-4 py-2 rounded-md hover:bg-[#244a29] transition"
              type="button"
            >
              Lihat Riwayat Peminjaman
            </button>

            <button
              class="bg-red-600 text-white text-xs font-semibold px-4 py-2 rounded-md hover:bg-red-700 transition"
              type="button"
            >
              <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </button>
          </div>
        </form>
      </section>
    </main>
  </body>
</html>
